#ifndef __JOBS_H__
#define __JOBS_H__

#include "csapp.h"

#define MAXJOBS 10


typedef enum{FG,BG,ST} state;

typedef struct{
	pid_t pid;
	state etat;
	char cmd[MAXLINE];
} jobStruct;

typedef struct{
	jobStruct jobs[MAXJOBS];
	int taille;
	int indiceFG; // si pas de FG, indice = -1
} JobsStruct;

jobsStruct initJobs();
void delJobPid(pid_t pid, JobsStruct *jobs);
void delJobInd(int i, JobsStruct *jobs);
void addJob(jobStruct job, JobsStruct *jobs);
void printJob(JobsStruct jobs);

#endif
